from setuptools import find_packages, setup

setup(
    name="{{ project_name }}",
    version="0.0.1",
    packages=find_packages(),
    {%- if use_dbt_project_package_data_dir %}
    package_data={
        "{{ project_name }}": [
            "dbt-project/**/*",
        ],
    },
    {%- endif %}
    install_requires=[
        "dagster>=1.4.0",
        "dagster-cloud>=1.4.0",
        "dagster-dbt>=0.20.0",
        "dbt-core>=1.4.0",
        {% for dbt_adapter in dbt_adapter_packages -%}
        "{{ dbt_adapter }}",
        {%- endfor %}
    ],
    extras_require={
        "dev": [
            "dagster-webserver",
        ]
    },
    entry_points = {
        'console_scripts': [
            "dagster = dagster.cli:main",
        ]
    },
)
